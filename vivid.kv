#:kivy 2.0.0

<ImageIndexContainer>:
  size_hint: (.75, 1)
  do_x_scroll: False
  scroll_wheel_distance: 80

<ImageIndex>:
  size_hint: (1, None)
  height: self.minimum_height
  col_default_width: 250
  spacing: (10, 10)
  padding: [10, 10]

<TagList>:
  size_hint: (1, None)
  height: self.minimum_height + 32
  col_default_width: 125
  spacing: (10, 0)
  padding: [10, 10]

<TagListChild>:
  width: 191
  size_hint_max_x: 191
  size_hint_min_y: 32
  valign: 'middle'

<Thumbnail>:
  source: './tests/test_images/cat1.jpg'
  size_hint: (.25, None)
  size_hint_max_x: 250
  size_hint_min_x: 125
  height: 125

<Sidebar>:
  padding: [10, 10, 5, 5]
  spacing: 10
  orientation: 'vertical'
  size_hint: (.25, 1)
  size_hint_min_x: 250

<SideBarField>:
  orientation: 'horizontal'
  size_hint_max_y: 32

<Toolbar>:
  orientation: 'horizontal'
  size_hint_max_y: 30

<ToolbarButton>:
  size_hint_max_x: 104
  size_hint_max_y: 30
  text: 'Add Folder'

<SidebarPreview>:
  size_hint_max_y: 250

<ContextMenu>:
  size: (180, 200)

<ContextItem>:
  text_size: (self.width, self.height)
  padding: (4, 6)
  size_hint_max_x: 180
  size_hint_max_y: 32

<ToolbarSearch>:
  size_hint: (.5, 1)
  size_hint_max_x: 960
  hint_text: 'Find'

<FileOptions>:
  size_hint: (1, 1)
  size_hint_max_y: 36

<WorkSpace>:
  size: root.size
  canvas:
    Color:
      rgba: (.2, .2, .2, 1)
    Rectangle:
      size: self.size
      pos: self.pos

  BoxLayout:
    orientation: 'vertical'
    size: root.size

    Toolbar:

    BoxLayout:
      orientation: 'horizontal'
      Sidebar:

      ImageIndexContainer:
